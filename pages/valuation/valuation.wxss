.page {
  background: #eaeaea;
  min-height: 100vh;
}

.valuation-img {
  width: 100%;
  height: 224rpx;
}

/* 详细地址的字体大小 */

.areadetail {
  font-size: 14px;
}

/* input文字右对齐 */

.text-to-right {
  text-align: right;
}

.inputError {
  position: absolute;
  top: 0;
  padding-left: 1rem;
  width: 100%;
  line-height: 30px;
  font-size: 14px;
  color: red;
}

.inputError::before {
  content: '*';
  text-align: left;
  margin-right: 10rpx;
}

/* 按钮的样式 */

.login-btn {
  padding-top: 30px;
  position: relative;
}
